generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  name     String?
  password String   // hashed password
  orders   Order[]
}

model Order {
  userId  String
  product String
  id      String @id @default(uuid())
  user    User   @relation(fields: [userId], references: [id])
}
